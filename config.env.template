# Copy this file to .env and fill in your actual API keys

# Telegram Bot Configuration
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
 
# OpenAI API Configuration  
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here 

# Mastodon Configuration (Optional)
# Configure these to enable Mastodon posting functionality
# Instance URL should include protocol (https://)
MASTODON_INSTANCE=https://mastodon.social
MASTODON_ACCESS_TOKEN=your_mastodon_access_token_here

# Web Dashboard Configuration (Optional)
WEB_DASHBOARD_ENABLED=true
WEB_DASHBOARD_PORT=8080
WEB_DASHBOARD_HOST=localhost

# Bot Behavior Configuration (Optional)
MAX_PRODUCTS_PER_USER=5
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_WINDOW=60
DEBUG_MODE=false
LOG_LEVEL=INFO
DATA_DIRECTORY=data 